<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"><![CDATA[
    tools:context=".DrawControl">
    ]]>

    <ImageButton
        android:id="@+id/uploadBttn"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/stat_sys_download"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/downloadBttn"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_upload"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/clearBttn"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_delete"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/runButton"
        android:layout_width="87dp"
        android:layout_height="49dp"
        android:text="RUN"
        app:layout_constraintBottom_toTopOf="@+id/DrawNavbarMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pixelGridA"
        app:layout_constraintVertical_bias="0.583" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="49dp"
        android:layout_height="500dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/pixelGridA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pixelGridA"
        app:layout_constraintVertical_bias="1.0">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:max="104"
            android:min="8"
            android:progress="2"
            android:progressDrawable="@android:drawable/screen_background_light"
            android:progressTint="#8685EF"
            android:rotation="270"
            android:thumb="@android:drawable/edit_text"
            android:thumbTint="#D3D0E3" />

    </FrameLayout>

    <TextView
        android:id="@+id/textViewPathLength"
        android:layout_width="151dp"
        android:layout_height="19dp"
        android:text="Path Length: 0"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textViewDistanceTraveled"
        android:layout_width="103dp"
        android:layout_height="21dp"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewCurrentDistance"
        app:layout_constraintTop_toBottomOf="@+id/textViewPathLength"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewCurrentDistance"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="Current: "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPathLength"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/DrawNavbarManual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual Control"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/DrawNavbarMain"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/DrawNavbarDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Control"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DrawNavbarMain" />

    <Button
        android:id="@+id/DrawNavbarMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/numberViewSpeed"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Speed"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#d1d1d1"
        app:layout_constraintBottom_toTopOf="@+id/DrawNavbarMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pixelGridA"
        app:layout_constraintVertical_bias="0.333" />

    <EditText
        android:id="@+id/numberViewCellLength"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="Cell Length(Cm)"
        android:inputType="numberDecimal"
        android:numeric="decimal"
        android:textColor="@color/black"
        android:textColorHint="#d1d1d1"
        app:layout_constraintBottom_toTopOf="@+id/DrawNavbarMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberViewSpeed"
        app:layout_constraintVertical_bias="0.526" />

    <com.example.drawer.CanvasGrid
        android:id="@+id/pixelGridA"
        android:layout_width="319dp"
        android:layout_height="486dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/DrawNavbarMain"
        app:layout_constraintEnd_toStartOf="@+id/frameLayout"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.324" />

    <Button
        android:id="@+id/viewPointsSaved"
        android:layout_width="87dp"
        android:layout_height="49dp"
        android:text="Saves"
        app:layout_constraintBottom_toTopOf="@+id/DrawNavbarMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pixelGridA"
        app:layout_constraintVertical_bias="0.583" />


</androidx.constraintlayout.widget.ConstraintLayout>